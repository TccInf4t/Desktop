package br.com.onpecas.controller;

import java.net.URL;
import java.util.ResourceBundle;

import br.com.onpecas.view.CallScene;
import javafx.fxml.FXML;
import javafx.fxml.Initializable;
import javafx.scene.control.MenuItem;
import javafx.scene.layout.Border;
import javafx.scene.layout.BorderPane;

public class PainelPrincipalController implements Initializable {
	@FXML MenuItem menuItemTransportadora;

	CallScene call;
	BorderPane border;

	public PainelPrincipalController(BorderPane border){
		this.border = border;
	}

	@Override
	public void initialize(URL location, ResourceBundle resources) {
		call = new CallScene();

		menuItemTransportadora.setOnAction(l->call.loadTransportadoraInicial(border));
	}
}
